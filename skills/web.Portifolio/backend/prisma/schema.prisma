// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String         @id @default(uuid())
  username            String         @unique
  password            String         // bcrypt hashed
  verificationCode    String?        // 6-digit code for 2FA
  verificationExpires DateTime?      // Expiration for the code
  refreshTokens       RefreshToken[]
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  tags        String[] // ["Power BI", "Python", "SQL"]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       File[]

  @@index([createdAt])
}

model File {
  id         String   @id @default(uuid())
  filename   String   // Original filename from user
  storedName String   // UUID-based filename on disk
  mimetype   String
  size       Int      // bytes
  path       String   // Relative path in uploads/
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@index([projectId])
  @@index([createdAt])
}
